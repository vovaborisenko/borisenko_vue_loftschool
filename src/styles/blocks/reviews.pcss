.reviews {
  padding: 70px 0 57px;
  background: $color-background url(~images/content/bg-reviews-phone.jpg) center / cover;

  &__title {
    margin-bottom: 20px;
    font-size: 24px;
    line-height: 33px;
    font-weight: 700;
    text-align: center;
  }

  &__actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 134px;
    margin: 0 auto;
    font-size: 53px;
  }

  &__list {
    margin-top: 55px;
  }
}
