.aphorism {
  &__content {
    line-height: 1.72;
    opacity: 0.6;

    @include desktop {
      line-height: 1.875;
    }
  }

  &__author {
    margin-top: 2.34em;
    font-style: italic;

    @include tablets {
      margin-top: 1.21em;
    }

    @include desktop {
      margin-top: 1.71em;
    }
  }
}
