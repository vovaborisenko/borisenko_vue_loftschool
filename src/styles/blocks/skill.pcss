.skill {
  position: relative;

  &__title {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 70%;
    font-size: 15px;
    line-height: 20px;
    font-weight: 700;
    text-align: center;
    opacity: 0.5;
    transform: translate(-50%, -50%);

    @include tablets {
      font-size: 18px;
    }
  }

  &__svg {
    display: block;
  }

  &__track {
    opacity: 0.1;
  }

  &__diagram {
    stroke-dasharray: 340;
    stroke-dashoffset: 100;
  }
}
