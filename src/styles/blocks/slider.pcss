.slider {
  position: relative;

  &__item {
    position: relative;

    &::before {
      content: attr(data-index);
      position: absolute;
      bottom: 0;
      left: 100%;
      font-size: 300px;
      line-height: 0.8;
      font-weight: 800;
      color: #e6e6e6;
      transform: translateX(-63px);

      @include desktop {
        top: 80px;
        bottom: auto;
        transform: translateX(-48px);
      }

      @include desktopHd {
        top: 73px;
        font-size: 400px;
        transform: translateX(-56px);
      }
    }
  }

  &__img {
    position: relative;
    width: 100%;
  }

  &__actions {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 55px;
    height: 110px;
    color: $color-text;

    @include tablets {
      bottom: 10.75%;
      left: 100%;
      right: auto;
      width: 5.44%;
      height: 18.2%;
    }
  }

  &__button {
    width: 100%;
    height: 50%;
  }

  &__previews {
    position: absolute;
    right: 0;
    bottom: 10.75%;
    display: none;
    width: 74%;
    height: 18.2%;

    @include tablets {
      display: flex;
      justify-content: flex-end;
    }
  }

  &__preview {
    position: relative;
    flex: 0 0 25%;
    padding: 0;
    overflow: hidden;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      right: 0;
      left: 0;
      border: 2px solid transparent;
      transition: 0.2s;
    }

    &--active,
    &:hover {
      &::before {
        border-color: $color-accent;
      }
    }

    &:active {
      &::before {
        border-color: $color-accent-dark;
      }
    }

    &:focus {
      z-index: 1;
    }
  }
}
