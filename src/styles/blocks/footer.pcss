.footer {
  padding: 53px 0 87px;
  background-color: $color-background;

  @include tablets {
    padding: 48px 0 113px;
  }

  &__container {
    @include tablets {
      display: flex;
    }
  }

  &__head {
    @include tablets {
      flex: 0 0 170px;
      margin-right: 65px;
    }
  }

  &__copyright {
    font-size: 48px;
    line-height: 65px;
    font-weight: 600;
    color: rgba($color-text, 0.3);
  }

  &__title {
    margin: 12px 0 9px;
    font-size: 18px;
    line-height: 25px;
    font-weight: 700;
    text-transform: uppercase;

    @include tablets {
      margin: 4px 0 18px;
      line-height: 30px;
    }
  }

  &__subtitle {
    line-height: 19px;
    color: rgba($color-text, 0.3);

    @include tablets {
      line-height: 24px;
    }
  }

  &__desc {
    line-height: 24px;
    color: rgba($color-text, 0.6);
  }

  &__menu {
    margin: 45px 0 49px;

    @include tablets {
      margin: 13px 0 40px;
    }
  }

  &__socials {
    margin: 12px 0 31px;
    font-size: 50px;

    @include tablets {
      margin-bottom: 50px;
    }
  }
}
