.inner-tooltip-container {
  padding: 22px;
  background: $color-success;
  min-width: 400px;
  position: relative;
  display: flex;
  justify-content: space-between;
  color: #fff;

  &.warning {
    background: $color-warning;
  }

  &.error {
    background: $color-error;
  }
}

.tooltip__close {
  width: 20px;
  height: 20px;
  background: svg-load('cross.svg', fill=#fff) center center no-repeat;
  cursor: pointer;
  margin-left: 20px;
}
